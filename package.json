{
  "name": "iohook-workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for iohook packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test --workspace=packages/macos",
    "test:basic": "npm run test:basic --workspace=packages/macos",
    "test:permissions": "npm run test:permissions --workspace=packages/macos",
    "test:comprehensive": "npm run test:comprehensive --workspace=packages/macos",
    "test:performance": "npm run test:performance --workspace=packages/macos",
    "test:events": "npm run test:events --workspace=packages/macos",
    "test:keyboard": "npm run test:keyboard --workspace=packages/macos",
    "electron": "npm run electron --workspace=packages/macos",
    "electron:dev": "npm run electron:dev --workspace=packages/macos",
    "typescript:example": "npm run typescript:example --workspace=packages/macos",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:macos": "npm run build --workspace=packages/macos",
    "build:windows": "npm run build --workspace=packages/windows",
    "build:crossplatform": "npm run build --workspace=packages/crossplatform",
    "prebuild:macos": "npm run prebuild-all --workspace=packages/macos",
    "prebuild:windows": "npm run prebuild-all --workspace=packages/windows",
    "install:all": "npm install --workspaces",
    "verdaccio:start": "verdaccio",
    "verdaccio:patch:shared": "npm version patch --workspace=packages/shared",
    "verdaccio:patch:macos": "npm version patch --workspace=packages/macos",
    "verdaccio:patch:windows": "npm version patch --workspace=packages/windows",
    "verdaccio:patch:crossplatform": "npm version patch --workspace=packages/crossplatform",
    "verdaccio:patch:all": "npm version patch --workspaces",
    "verdaccio:minor:shared": "npm version minor --workspace=packages/shared",
    "verdaccio:minor:macos": "npm version minor --workspace=packages/macos",
    "verdaccio:minor:windows": "npm version minor --workspace=packages/windows",
    "verdaccio:minor:crossplatform": "npm version minor --workspace=packages/crossplatform",
    "verdaccio:minor:all": "npm version minor --workspaces",
    "verdaccio:major:shared": "npm version major --workspace=packages/shared",
    "verdaccio:major:macos": "npm version major --workspace=packages/macos",
    "verdaccio:major:windows": "npm version major --workspace=packages/windows",
    "verdaccio:major:crossplatform": "npm version major --workspace=packages/crossplatform",
    "verdaccio:major:all": "npm version major --workspaces",
    "verdaccio:publish:shared": "npm publish --workspace=packages/shared --registry http://localhost:4873/",
    "verdaccio:publish:macos": "npm publish --workspace=packages/macos --registry http://localhost:4873/",
    "verdaccio:publish:windows": "npm publish --workspace=packages/windows --registry http://localhost:4873/",
    "verdaccio:publish:crossplatform": "npm publish --workspace=packages/crossplatform --registry http://localhost:4873/",
    "verdaccio:publish:all": "npm run verdaccio:publish:shared && npm run verdaccio:publish:macos && npm run verdaccio:publish:windows && npm run verdaccio:publish:crossplatform",
    "verdaccio:update:shared": "npm run verdaccio:patch:shared && npm run verdaccio:publish:shared",
    "verdaccio:update:macos": "npm run verdaccio:patch:macos && npm run verdaccio:publish:macos",
    "verdaccio:update:windows": "npm run verdaccio:patch:windows && npm run verdaccio:publish:windows",
    "verdaccio:update:crossplatform": "npm run verdaccio:patch:crossplatform && npm run verdaccio:publish:crossplatform",
    "verdaccio:update:all": "npm run verdaccio:patch:all && npm run verdaccio:publish:all",
    "patch:shared": "npm version patch --workspace=packages/shared",
    "patch:macos": "npm version patch --workspace=packages/macos",
    "patch:windows": "npm version patch --workspace=packages/windows",
    "patch:crossplatform": "npm version patch --workspace=packages/crossplatform",
    "patch:all": "npm version patch --workspaces",
    "minor:shared": "npm version minor --workspace=packages/shared",
    "minor:macos": "npm version minor --workspace=packages/macos",
    "minor:windows": "npm version minor --workspace=packages/windows",
    "minor:crossplatform": "npm version minor --workspace=packages/crossplatform",
    "minor:all": "npm version minor --workspaces",
    "major:shared": "npm version major --workspace=packages/shared",
    "major:macos": "npm version major --workspace=packages/macos",
    "major:windows": "npm version major --workspace=packages/windows",
    "major:crossplatform": "npm version major --workspace=packages/crossplatform",
    "major:all": "npm version major --workspaces",
    "publish:shared": "npm publish --workspace=packages/shared",
    "publish:macos": "npm publish --workspace=packages/macos",
    "publish:windows": "npm publish --workspace=packages/windows",
    "publish:crossplatform": "npm publish --workspace=packages/crossplatform",
    "publish:all": "npm run publish:shared && npm run publish:macos && npm run publish:windows && npm run publish:crossplatform",
    "release:patch:shared": "npm run patch:shared && npm run publish:shared",
    "release:patch:macos": "npm run patch:macos && npm run publish:macos",
    "release:patch:windows": "npm run patch:windows && npm run publish:windows",
    "release:patch:crossplatform": "npm run patch:crossplatform && npm run publish:crossplatform",
    "release:patch:all": "npm run patch:all && npm run publish:all",
    "release:minor:shared": "npm run minor:shared && npm run publish:shared",
    "release:minor:macos": "npm run minor:macos && npm run publish:macos",
    "release:minor:windows": "npm run minor:windows && npm run publish:windows",
    "release:minor:crossplatform": "npm run minor:crossplatform && npm run publish:crossplatform",
    "release:minor:all": "npm run minor:all && npm run publish:all",
    "release:major:shared": "npm run major:shared && npm run publish:shared",
    "release:major:macos": "npm run major:macos && npm run publish:macos",
    "release:major:windows": "npm run major:windows && npm run publish:windows",
    "release:major:crossplatform": "npm run major:crossplatform && npm run publish:crossplatform",
    "release:major:all": "npm run major:all && npm run publish:all"
  },
  "keywords": [
    "iohook",
    "event-hook",
    "system-events",
    "macos",
    "windows",
    "electron"
  ],
  "author": "hwanyong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwanyong/iohook-macos.git"
  },
  "bugs": {
    "url": "https://github.com/hwanyong/iohook-macos/issues"
  },
  "homepage": "https://github.com/hwanyong/iohook-macos#readme",
  "dependencies": {
    "@iohook/macos": "^1.0.6",
    "iohook-macos": "^1.0.6"
  }
}
