{
  "name": "iohook-workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for iohook packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test --workspace=packages/macos",
    "test:basic": "npm run test:basic --workspace=packages/macos",
    "test:permissions": "npm run test:permissions --workspace=packages/macos",
    "test:comprehensive": "npm run test:comprehensive --workspace=packages/macos",
    "test:performance": "npm run test:performance --workspace=packages/macos",
    "test:events": "npm run test:events --workspace=packages/macos",
    "test:keyboard": "npm run test:keyboard --workspace=packages/macos",
    "electron": "npm run electron --workspace=packages/macos",
    "electron:dev": "npm run electron:dev --workspace=packages/macos",
    "typescript:example": "npm run typescript:example --workspace=packages/macos",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:macos": "npm run build --workspace=packages/macos",
    "build:windows": "npm run build --workspace=packages/windows",
    "prebuild:macos": "npm run prebuild-all --workspace=packages/macos",
    "prebuild:windows": "npm run prebuild-all --workspace=packages/windows",
    "install:all": "npm install --workspaces",
    "publish:shared": "npm publish --workspace=packages/shared",
    "publish:macos": "npm publish --workspace=packages/macos",
    "publish:windows": "npm publish --workspace=packages/windows",
    "publish:crossplatform": "npm publish --workspace=packages/crossplatform"
  },
  "keywords": [
    "iohook",
    "event-hook",
    "system-events",
    "macos",
    "windows",
    "electron"
  ],
  "author": "hwanyong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwanyong/iohook-macos.git"
  },
  "bugs": {
    "url": "https://github.com/hwanyong/iohook-macos/issues"
  },
  "homepage": "https://github.com/hwanyong/iohook-macos#readme",
  "dependencies": {
    "@iohook/macos": "^1.0.6"
  }
}
